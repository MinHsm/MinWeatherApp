<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/ftXq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="星期一"
        android:textColor="@color/wTxt"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ftImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/snowy"
        app:layout_constraintBottom_toBottomOf="@+id/ftXq"
        app:layout_constraintStart_toEndOf="@+id/ftXq"
        app:layout_constraintTop_toTopOf="@+id/ftXq" />

    <TextView
        android:id="@+id/ftWqk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="大雪"
        android:textColor="@color/wTxt"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ftImg"
        app:layout_constraintStart_toEndOf="@+id/ftImg"
        app:layout_constraintTop_toTopOf="@+id/ftImg" />

    <TextView
        android:id="@+id/ftLTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="12"
        android:textColor="@color/wTxt"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ftHTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="24"
        android:textColor="@color/wTxt"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ftLTemp"
        app:layout_constraintEnd_toStartOf="@+id/ftLTemp"
        app:layout_constraintTop_toTopOf="@+id/ftLTemp" />


</androidx.constraintlayout.widget.ConstraintLayout>